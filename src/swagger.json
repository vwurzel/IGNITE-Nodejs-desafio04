{
    "openapi": "3.0.0",
    "info": {
        "title": "Ignite challenge",
        "description": "API for user management (Rocketseat Nodejs SOLID challenge)",
        "version": "1.0.0",
        "contact": {
            "email": "vinicius@teste.com.br"
        }
    },
    "tags": [{
        "name": "users",
        "description": "Create a new user"
    }],
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Rocketseat",
                                    "email": "rocket@rocketseat.com.br"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "date"
                                        },
                                        "updated_at": {
                                            "type": "date"
                                        }
                                    },
                                    "example": {
                                        "admin": false,
                                        "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                                        "name": "Rocketseat",
                                        "email": "oi@rocketseat.com.br",
                                        "created_at": "2021-03-21T20:32:40.759Z",
                                        "updated_at": "2021-03-21T20:32:40.759Z"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User already exists",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "User already exists"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "List all users",
                "description": "Only admin users can list all users",
                "parameters": [{
                    "in": "header",
                    "name": "user_id",
                    "required": true,
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "date"
                                            },
                                            "updated_at": {
                                                "type": "date"
                                            }
                                        },
                                        "example": [{
                                                "admin": true,
                                                "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                                                "name": "user 1",
                                                "email": "user1@rocketseat.com.br",
                                                "created_at": "2021-03-21T20:32:40.759Z",
                                                "updated_at": "2021-03-21T20:32:40.759Z"
                                            },
                                            {
                                                "admin": false,
                                                "id": "d32e9e4e-43cd-4f64-a393-4f0158c9e348",
                                                "name": "user2",
                                                "email": "user2@rocketseat.com.br",
                                                "created_at": "2021-03-10T23:14:43.081Z",
                                                "updated_at": "2021-03-10T23:14:43.081Z"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Only admin users can use this feature",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "Only admins can access the list."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Show infos about a user",
                "parameters": [{
                    "in": "path",
                    "name": "user_id",
                    "required": true,
                    "description": "User ID",
                    "schema": {
                        "type": "string"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "date"
                                        },
                                        "updated_at": {
                                            "type": "date"
                                        }
                                    },
                                    "example": {
                                        "admin": false,
                                        "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                                        "name": "Rocketseat",
                                        "email": "oi@rocketseat.com.br",
                                        "created_at": "2021-03-21T20:32:40.759Z",
                                        "updated_at": "2021-03-21T20:32:40.759Z"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "User not found"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "users"
                ],
                "summary": "Turn user as admin",
                "parameters": [{
                    "in": "path",
                    "name": "user_id",
                    "required": true,
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "date"
                                        },
                                        "updated_at": {
                                            "type": "date"
                                        }
                                    },
                                    "example": {
                                        "admin": true,
                                        "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                                        "name": "Rocketseat",
                                        "email": "oi@rocketseat.com.br",
                                        "created_at": "2021-03-21T20:32:40.759Z",
                                        "updated_at": "2021-03-21T20:32:40.759Z"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "User not found"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}